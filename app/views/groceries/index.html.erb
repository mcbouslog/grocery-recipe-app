<div ng-app="app">
  <div ng-controller="groceriesCtrl" ng-init="setup()">
<!-- Page heading one starts -->

<div class="page-heading-one">
  <h2>Cook dinner tonight.</h2>
<!--   <p class="bg-color">Our Works Here</p> -->
</div>

<!-- Page heading one ends -->      

<!-- Main content starts -->

<div class="main-block">

  <br />

  <div class="block-heading-four">
    <h3>Enter <span class="color">&amp;</span> update your groceries on-hand, find what you can cook with <span class="color">ChefHat</span>.</h3>
    <i class="fa fa-cutlery color br-color"></i>
  </div>

  <br />

  <!-- Parallax block one -->
  <form>
  <div class="parallax-one">
    <div class="container">
      <!-- Parallax element block -->
      <div class="p-element">
<!--         <h2>Groceries!</h2> -->

        <!-- Accordion starts -->
        <div class="panel-group" id="accordion-alt2">
         <!-- Panel. Use "panel-XXX" class for different colors. Replace "XXX" with color. -->
          <div class="panel panel-green"> 
          <!-- Panel heading -->
           <div class="panel-heading">
            <h4 class="panel-title">
              <a data-toggle="collapse" data-parent="#accordion-alt2" href="#collapseOne-alt2">
               Produce
              </a>
              <button ng-click="save()" class="pull-right btn btn-grey btn-no-border">Save</button>
            </h4>
           </div>
           <div id="collapseOne-alt2" class="panel-collapse collapse">
            <!-- Panel body -->
            <div class="panel-body">
              
                <div ng-repeat="grocery in groceries | orderBy:'description'" ng-if="grocery.grocery_category === 'produce'" class="checkbox col-xs-3">
                <input type="checkbox" ng-model="grocery.current_user"><label> {{ grocery.description }} </label>
                </div>

            </div>
           </div>
          </div>
          <div class="panel panel-red">
           <div class="panel-heading">
            <h4 class="panel-title">
              <a data-toggle="collapse" data-parent="#accordion-alt2" href="#collapseTwo-alt2">
               Meats, Seafood & Tofu
              </a>
              <button ng-click="save()" class="pull-right btn btn-grey btn-no-border">Save</button>
            </h4>
           </div>
           <div id="collapseTwo-alt2" class="panel-collapse collapse">
            <div class="panel-body">
              
                <div ng-repeat="grocery in groceries | orderBy:'description'" ng-if="grocery.grocery_category === 'meat' || grocery.grocery_category === 'seafood'" class="checkbox col-xs-3">
                <input type="checkbox" ng-model="grocery.current_user"><label> {{ grocery.description }} </label>
                </div>

            </div>
           </div>
          </div>
          <div class="panel panel-blue">
           <div class="panel-heading">
            <h4 class="panel-title">
              <a data-toggle="collapse" data-parent="#accordion-alt2" href="#collapseThree-alt2">
               Bakery & Dairy
              </a>
              <button ng-click="save()" class="pull-right btn btn-grey btn-no-border">Save</button>
            </h4>
           </div>
           <div id="collapseThree-alt2" class="panel-collapse collapse">
            <div class="panel-body">
              
                <div ng-repeat="grocery in groceries | orderBy:'description'" ng-if="grocery.grocery_category === 'bakery' || grocery.grocery_category === 'dairy'" class="checkbox col-xs-3">
                <input type="checkbox" ng-model="grocery.current_user"><label> {{ grocery.description }} </label>
                </div>
            
            </div>
           </div>
          </div>
          <div class="panel panel-white">
           <div class="panel-heading">
            <h4 class="panel-title">
              <a data-toggle="collapse" data-parent="#accordion-alt2" href="#collapseFour-alt2">
               Other Fridge & Freezer Items
              </a>
              <button ng-click="save()" class="pull-right btn btn-grey btn-no-border">Save</button>
            </h4>
           </div>
           <div id="collapseFour-alt2" class="panel-collapse collapse">
            <div class="panel-body">
              
                <div ng-repeat="grocery in groceries | orderBy:'description'" ng-if="grocery.grocery_category === 'other_frig'" class="checkbox col-xs-3">
                <input type="checkbox" ng-model="grocery.current_user"><label> {{ grocery.description }} </label>
                </div>
            
            </div>
           </div>
          </div>
          <div class="panel panel-lblue">
           <div class="panel-heading">
            <h4 class="panel-title">
              <a data-toggle="collapse" data-parent="#accordion-alt2" href="#collapseFive-alt2">
               Other Pantry Items
              </a>
              <button ng-click="save()" class="pull-right btn btn-grey btn-no-border">Save</button>
            </h4>
           </div>
           <div id="collapseFive-alt2" class="panel-collapse collapse">
            <div class="panel-body">
              
                <div ng-repeat="grocery in groceries | orderBy:'description'" ng-if="grocery.grocery_category === 'other_dry'" class="checkbox col-xs-3">
                <input type="checkbox" ng-model="grocery.current_user"><label> {{ grocery.description }} </label>
                </div>
            
            </div>
           </div>
          </div>
          <div class="panel panel-orange">
           <div class="panel-heading">
            <h4 class="panel-title">
              <a data-toggle="collapse" data-parent="#accordion-alt2" href="#collapseSix-alt2">
               Spices & Sauces
              </a>
              <button ng-click="save()" class="pull-right btn btn-grey btn-no-border">Save</button>
            </h4>
           </div>
           <div id="collapseSix-alt2" class="panel-collapse collapse">
            <div class="panel-body">
              
                <div ng-repeat="grocery in groceries | orderBy:'description'" ng-if="grocery.grocery_category === 'spices' || grocery.grocery_category === 'sauces'" class="checkbox col-xs-3">
                <input type="checkbox" ng-model="grocery.current_user"><label> {{ grocery.description }} </label>
                </div>
            
            </div>
           </div>
          </div>
          <div class="panel panel-purple">
           <div class="panel-heading">
            <h4 class="panel-title">
              <a data-toggle="collapse" data-parent="#accordion-alt2" href="#collapseSeven-alt2">
               Miscellaneous
              </a>
              <button ng-click="save()" class="pull-right btn btn-grey btn-no-border">Save</button>
            </h4>
           </div>
           <div id="collapseSeven-alt2" class="panel-collapse collapse">
            <div class="panel-body">
              <p>Search for unusual ingredients will go here</p>            
            </div>
           </div>
          </div>
        </div>
        </div>
        <!-- Accordion ends -->
      </div>
    <div class="recipe-search-btn">
    <a ng-click="save()" class="btn btn-lg btn-white" href="/recipes">Recipe Search</a>
    </div>
    </div>
  </form>

</div>

<!-- Main content ends -->
  </div>
</div>